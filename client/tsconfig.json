{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
      "vitest/globals"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@features/*": ["src/features/*"],
      "@models/*": ["src/shared/models/*"],
      "@shared/*": ["src/shared/*"],
      "@page/*": ["src/pages/*"],
    },
    "noEmit": true,
  },
  "include": ["src", "test"],
  "exclude": ["node_modules"]
}
